---
import { Icon } from "astro-icon";
const today = new Date();
---

<footer>
  <span class="footer-span">
    Made with ❤️ using <Icon class="icon" name="vscode-icons:file-type-astro" />
  </span>
</footer>
<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
    flex-direction: row;
    align-items: baseline;
  }

  .icon {
    width: 1.5em;
    height: 1.5em;
  }

	.footer-span {
		display: flex;
		flex-direction: row;
		align-items: baseline;
		justify-content: center;
	}

	@media (min-width: 768px) {
		footer {
			padding: 2em 1em 6em 1em;
		}
	}
</style>
